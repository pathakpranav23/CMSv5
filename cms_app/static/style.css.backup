body { padding-bottom: 48px; min-height: 100vh; display: flex; flex-direction: column; }
.root, html, body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
  color: var(--text-color);
  background-color: var(--surface-bg);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
/* Default UI variables */
:root {
  --surface-bg: #f7f9fc;
  --text-color: #0f172a;
  --border-color: #e5e7eb;
  --nav-bg: #111827;        /* default dark navbar */
  --nav-fg: #f9fafb;        /* default navbar text */
  --card-header-bg: #f1f5f9; /* default card header */
  --card-border: #e5e7eb;    /* default card border */
}
/* Role-based background themes */
body.role-admin {
  --surface-bg: #f8fafc;   /* lightest slate */
  --text-color: #0f172a;   /* dark slate text */
  --nav-bg: #0b132b;       /* deep slate */
  --nav-fg: #e5e7eb;
  --card-header-bg: #eef2f7;
  --card-border: #e5e7eb;
}
body.role-principal {
  --surface-bg: #f6f4ff;   /* soft indigo tint */
  --text-color: #111827;   /* near-black */
  --nav-bg: #312e81;       /* indigo-900 */
  --nav-fg: #eef2ff;       /* indigo-100 */
  --card-header-bg: #e0e7ff; /* indigo-200 */
  --card-border: #c7d2fe;    /* indigo-300 */
}
body.role-faculty {
  --surface-bg: #f5fbfb;   /* soft teal tint */
  --text-color: #0f172a;   /* dark slate text */
  --nav-bg: #0f766e;       /* teal-700 */
  --nav-fg: #ecfeff;       /* cyan-50 */
  --card-header-bg: #ccfbf1; /* teal-100 */
  --card-border: #99f6e4;    /* teal-200 */
}
body.role-clerk {
  --surface-bg: #f6f8ff;   /* soft blue tint */
  --text-color: #111827;   /* near-black */
  --nav-bg: #1e3a8a;       /* blue-900 */
  --nav-fg: #eff6ff;       /* blue-50 */
  --card-header-bg: #dbeafe; /* blue-100 */
  --card-border: #bfdbfe;    /* blue-200 */
}
body.role-student {
  --surface-bg: #f7f4ff;   /* soft purple tint */
  --text-color: #111827;   /* near-black */
  --nav-bg: #6d28d9;       /* purple-700 */
  --nav-fg: #f5f3ff;       /* purple-50 */
  --card-header-bg: #ede9fe; /* purple-100 */
  --card-border: #ddd6fe;    /* purple-200 */
}

/* Navbar theming using role variables */
.navbar {
  background-color: var(--nav-bg) !important;
}
.navbar .navbar-brand,
.navbar .nav-link,
.navbar .navbar-text {
  color: var(--nav-fg) !important;
}
.navbar .nav-link:hover,
.navbar .nav-link:focus {
  opacity: 0.9;
}

/* Card theming */
.card {
  border-color: var(--card-border);
}
.card .card-header {
  background-color: var(--card-header-bg);
}

/* Footer theming for consistency */
.app-footer {
  background-color: var(--nav-bg);
  color: var(--nav-fg);
}
.app-footer .footer-brand { color: var(--nav-fg); }

/* Students filters alignment */
.students-filters {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.5rem;
  width: 100%;
}
.students-filters label { margin-bottom: 0; }
.students-filters .form-select,
.students-filters .form-control { width: auto; }
.students-filters .btn { vertical-align: middle; }

/* Mobile adjustments: stack filters and avoid overlap */
@media (max-width: 576px) {
  .students-filters {
    flex-direction: column;
    align-items: stretch;
  }
  .students-filters label { margin-left: 0 !important; }
  .students-filters .form-select,
  .students-filters .form-control { width: 100%; }
  .students-filters .filter-actions {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 0.5rem;
    width: 100%;
  }
  .students-filters .filter-actions .btn {
    width: 100%;
    margin-left: 0 !important;
  }
}

/* Medium (md, ≥768px) screens: place action buttons side-by-side */
@media (min-width: 768px) {
  .students-filters .filter-actions {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    width: auto;
  }
  .students-filters .filter-actions .btn {
    width: auto;
  }
}

/* Generic filter toolbar pattern for consistency across pages */
.filters {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.5rem;
  width: 100%;
}
.filters .input-group-text { white-space: nowrap; }
.filters .form-select,
.filters .form-control { width: auto; }
.filters .filter-actions .btn { vertical-align: middle; }

/* Mobile-first compact spacing for filters */
@media (max-width: 576px) {
  .filters { flex-direction: column; align-items: stretch; gap: 0.375rem; }
  .filters .form-select, .filters .form-control { width: 100%; }
  .filters .filter-actions { display: flex; flex-direction: column; gap: 0.5rem; width: 100%; }
  .filters .filter-actions .btn { width: 100%; }
}
@media (min-width: 768px) {
  .filters .filter-actions { display: inline-flex; flex-direction: row; align-items: center; gap: 0.5rem; width: auto; }
  .filters .filter-actions .btn { width: auto; }
}

/* Subtle role-tinted badge for module headers */
.role-badge {
  display: inline-block;
  padding: 0.125rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  font-weight: 600;
  line-height: 1;
  color: var(--nav-fg);
  background-color: var(--nav-bg);
  border: 1px solid var(--card-border);
  opacity: 0.85;
}
/* Sticky footer layout: main grows, footer sticks to bottom */
body > main { flex: 1 0 auto; }
.navbar-brand { font-weight: 600; }
.navbar-brand-logo { height: 38px; width: auto; display: inline-block; }
.navbar-brand img { max-height: 42px; width: auto; visibility: visible; opacity: 1; }
.table { font-size: 0.95rem; }
/* Faculty photos in list */
.faculty-photo { width: 48px; height: 48px; object-fit: cover; border-radius: 50%; display: inline-block; }
/* Profile avatar sizing */
.profile-avatar { width: 180px; height: 180px; object-fit: cover; border-radius: 50%; background-size: cover; background-position: center; background-repeat: no-repeat; }
/* Fallback when no photo is available */
.profile-avatar.no-photo {
  background-color: #f8f9fa;
  border: 1px solid #dee2e6;
  background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='180' height='180' viewBox='0 0 100 100'><circle cx='50' cy='30' r='20' fill='%23bbb'/><path d='M15 85c0-18 20-30 35-30s35 12 35 30' fill='%23ddd'/><circle cx='50' cy='30' r='18' fill='none' stroke='%23aaa' stroke-width='2'/></svg>");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* Modern dashboard cards */
.dashboard-linear .card {
  position: relative;
  border: none;
  border-radius: 14px;
  background: linear-gradient(180deg, #ffffff 0%, #f7f9fc 100%);
  box-shadow: 0 6px 18px rgba(17, 24, 39, 0.08);
  transition: transform 220ms ease, box-shadow 220ms ease, background 220ms ease;
}
.dashboard-linear .card:not(.kpi-hero):hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 28px rgba(17, 24, 39, 0.16);
  background: linear-gradient(180deg, #ffffff 0%, #eef3ff 100%);
}
.dashboard-linear .card-header {
  border: 0;
  background: transparent;
  font-weight: 600;
}
.dashboard-linear .card-body {
  padding: 1rem 1.25rem 1.25rem 1.25rem;
}

/* Accent bar on top of cards */
.dashboard-linear .card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  border-top-left-radius: 14px;
  border-top-right-radius: 14px;
  background: linear-gradient(90deg, #4f46e5, #06b6d4, #0ea5e9);
  opacity: 0.9;
}

/* Metric cards styling */
.dashboard-metrics .card {
  border-radius: 14px;
  border: none;
  background: linear-gradient(180deg, #ffffff 0%, #f7f9fc 100%);
  box-shadow: 0 6px 18px rgba(17, 24, 39, 0.08);
  transition: transform 200ms ease, box-shadow 200ms ease;
}
.dashboard-metrics .card:hover { transform: translateY(-2px); box-shadow: 0 12px 28px rgba(17, 24, 39, 0.16); }
.dashboard-metrics .display-6 { font-weight: 700; letter-spacing: 0.5px; }
.dashboard-metrics .h5 { color: #475569; font-weight: 600; }

/* Make buttons in headers more prominent */
.dashboard-linear .card-header .btn { border-radius: 999px; }
.dashboard-linear .btn-outline-secondary:hover { background-color: #0ea5e9; color: #fff; border-color: #0ea5e9; }
.dashboard-linear .btn-outline-primary:hover { background-color: #4f46e5; color: #fff; border-color: #4f46e5; }

/* App shell with vertical sidebar navigation */
.app-shell { display: flex; min-height: 100vh; }
.sidebar {
  width: 256px;
  background: var(--nav-bg);
  color: var(--nav-fg);
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  padding: 1rem 0.75rem;
  overflow-y: auto;
  box-shadow: 0 8px 24px rgba(0,0,0,0.15);
}
.sidebar .brand { display: flex; align-items: center; gap: 0.5rem; padding: 0.25rem 0.5rem; margin-bottom: 0.75rem; }
.sidebar .brand img { height: 40px; width: auto; }
.sidebar .brand .program-badge { margin-left: auto; background: rgba(255,255,255,0.12); color: var(--nav-fg); border-radius: 999px; padding: 0.125rem 0.5rem; font-size: 0.75rem; }
.sidebar .nav { list-style: none; margin: 0; padding: 0; }
.sidebar .nav .heading { text-transform: uppercase; font-size: 0.75rem; opacity: 0.85; padding: 0.5rem 0.75rem; margin-top: 0.5rem; }
.sidebar .nav li { margin-bottom: 2px; }
.sidebar .nav a { display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem 0.75rem; border-radius: 8px; color: var(--nav-fg); text-decoration: none; }
.sidebar .nav a:hover { background: rgba(255,255,255,0.08); }
.sidebar .nav a .label { flex: 1; }
.sidebar .user-tools { margin-top: 0.75rem; border-top: 1px solid rgba(255,255,255,0.15); padding-top: 0.5rem; }

/* Small modern icon badge next to modules */
.module-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 22px;
  height: 22px;
  border-radius: 6px;
  background-color: rgba(255,255,255,0.15);
  color: var(--nav-fg);
}
.module-icon i { font-size: 1rem; line-height: 1; }

.app-main { margin-left: 256px; flex: 1 0 auto; }

/* Module cards grid styling */
.module-card { display: block; text-decoration: none; }
.module-card .module-card-inner {
  border: 1px solid var(--card-border);
  border-radius: 12px;
  padding: 0.75rem;
  background: linear-gradient(180deg, #ffffff 0%, #f7f9fc 100%);
  box-shadow: 0 6px 18px rgba(17, 24, 39, 0.08);
  transition: transform 180ms ease, box-shadow 180ms ease;
  display: flex;
  align-items: center;
  gap: 0.6rem;
}
.module-card .module-card-inner i { font-size: 1.25rem; color: #4f46e5; }
.module-card .module-card-inner span { font-weight: 600; color: #334155; }
.module-card .module-card-inner:hover { transform: translateY(-2px); box-shadow: 0 12px 28px rgba(17, 24, 39, 0.16); }

/* Mobile improvements: sidebar as off-canvas with backdrop */
.mobile-topbar { position: sticky; top: 0; z-index: 1030; }

@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 1040;
    width: 85%;
    max-width: 320px;
    box-shadow: var(--shadow-strong);
  }
  .app-shell.sidebar-open .sidebar { transform: translateX(0); }

  .sidebar-backdrop { display: none; }
  .app-shell.sidebar-open .sidebar-backdrop {
    display: block;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.35);
    z-index: 1030;
  }

  .app-main { position: relative; z-index: 1; margin-left: 0; }
  .sidebar .nav a { padding: 0.5rem; }
}

/* Smooth page entrance */
.dashboard-linear { animation: fadeInUp 280ms ease both; }
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(6px); }
  to   { opacity: 1; transform: translateY(0); }
}

/* App footer */
.app-footer {
  border-top: 1px solid var(--border-color);
  /* Default fallback: dark slate → near-black → gray */
  background: linear-gradient(135deg, #1f2937 0%, #111827 55%, #374151 100%);
  color: #fff;
  margin-top: auto;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.06);
}
.app-footer .footer-logo { height: 40px; width: auto; opacity: 0.98; filter: drop-shadow(0 1px 1px rgba(0,0,0,0.12)); }
@media (prefers-color-scheme: dark) {
  .app-footer { border-color: #1f2937; background-color: rgba(255, 255, 255, 0.04); }
  .app-footer .footer-logo { opacity: 1; filter: drop-shadow(0 1px 1px rgba(0,0,0,0.4)); }
}

/* Role-based footer gradients */
body.role-admin .app-footer {
  /* Navy → steel blue */
  background: linear-gradient(135deg, #0d1b2a 0%, #1b263b 55%, #415a77 100%);
  color: #fff;
}
body.role-principal .app-footer {
  /* Midnight blue → royal purple */
  background: linear-gradient(135deg, #16213e 0%, #0f3460 55%, #533483 100%);
  color: #fff;
}
body.role-faculty .app-footer {
  /* Deep green → teal → sky blue */
  background: linear-gradient(135deg, #064e3b 0%, #0f766e 55%, #0ea5e9 100%);
  color: #fff;
}
body.role-clerk .app-footer {
  /* Royal blue → violet → magenta */
  background: linear-gradient(135deg, #4169e1 0%, #8a2be2 55%, #ff00ff 100%);
  color: #fff;
}
body.role-student .app-footer {
  /* Deep purple → vibrant purple */
  background: linear-gradient(135deg, #3b0764 0%, #4c1d95 55%, #7c3aed 100%);
  color: #fff;
}

/* Hero KPI strip */
.kpi-hero {
  border: none;
  border-radius: 16px;
  background: linear-gradient(135deg, #0ea5e9 0%, #4f46e5 50%, #06b6d4 100%);
  color: #fff;
  box-shadow: 0 8px 24px rgba(17, 24, 39, 0.18);
  transition: color 200ms ease, background-color 200ms ease, box-shadow 220ms ease, transform 220ms ease;
}
.kpi-hero:hover {
  transform: none !important;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  background: var(--hero-fg, #ffffff);
  color: var(--hero-bg-solid, #111827);
}
.kpi-hero .card-body { padding: 1.25rem 1.5rem; }
.kpi-hero .h4 { font-weight: 700; }
.kpi-hero .text-muted { color: rgba(255, 255, 255, 0.85) !important; }
.kpi-hero .kpi { display: flex; flex-direction: column; min-width: 120px; }
.kpi-hero .kpi .label { font-size: 0.85rem; opacity: 0.9; }
.kpi-hero .kpi .value { font-size: 1.5rem; font-weight: 700; line-height: 1.2; }
/* Hero KPI strip contrast fixes */
.kpi-hero {
  color: #fff;
  border: none;
  box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  overflow: hidden;
}
.kpi-hero .h4,
.kpi-hero .card-title {
  color: inherit;
}
.kpi-hero .text-muted {
  color: inherit !important;
  opacity: 0.85;
}
.kpi-hero .kpi .label {
  color: inherit;
  opacity: 0.85;
}
.kpi-hero .kpi .value {
  color: inherit;
}

/* Role-based hero themes for strong contrast */
.kpi-hero.role-admin {
  --hero-fg: #ffffff;
  --hero-bg-solid: #1b263b;
  background: linear-gradient(135deg, #0d1b2a 0%, #1b263b 55%, #415a77 100%);
}
.kpi-hero.role-principal {
  --hero-fg: #ffffff;
  --hero-bg-solid: #0f3460;
  background: linear-gradient(135deg, #16213e 0%, #0f3460 55%, #533483 100%);
}
.kpi-hero.role-faculty {
  --hero-fg: #ffffff;
  --hero-bg-solid: #064e3b;
  background: linear-gradient(135deg, #064e3b 0%, #0f766e 55%, #0ea5e9 100%);
}
.kpi-hero.role-clerk {
  --hero-fg: #ffffff;
  --hero-bg-solid: #3a0ca3;
  background: linear-gradient(135deg, #3a0ca3 0%, #7209b7 55%, #b5179e 100%);
}
.kpi-hero.role-student {
  --hero-fg: #ffffff;
  --hero-bg-solid: #4c1d95;
  background: linear-gradient(135deg, #3b0764 0%, #4c1d95 55%, #7c3aed 100%);
}
.kpi-hero.role-default {
  --hero-fg: #ffffff;
  --hero-bg-solid: #111827;
  background: linear-gradient(135deg, #1f2937 0%, #111827 55%, #374151 100%);
}

/* Design tokens: neutral surfaces, text, borders, and role accents */
:root {
  --surface-bg: #ffffff;
  --surface-muted: #f8fafc;
  --text-color: #111827;
  --text-muted: #6b7280;
  --border-color: #e5e7eb;
  /* Unified, calmer accent palette */
  --accent-primary: #3b82f6; /* blue-500 */
  --accent-secondary: #64748b; /* slate-500 */
  --accent-success: #16a34a;
  --accent-warning: #d97706;
  --accent-danger: #dc2626;
  --accent-purple: #7c3aed;
  /* Strong shadow token for overlays/off-canvas */
  --shadow-strong: 0 12px 28px rgba(17, 24, 39, 0.18);
}
@media (prefers-color-scheme: dark) {
  :root {
    --surface-bg: #0b1220;
    --surface-muted: #0f172a;
    --text-color: #e5e7eb;
    --text-muted: #9ca3af;
    --border-color: #1f2937;
  }
}

/* Role-based accent mapping (used by badges and headers) */
body { --accent-role: var(--accent-primary); }
body.role-admin { --accent-role: #dc2626; }
body.role-principal { --accent-role: #d97706; }
body.role-faculty { --accent-role: #2563eb; }
body.role-student { --accent-role: #16a34a; }
body.role-clerk { --accent-role: #7c3aed; }

/* Page-level theme overrides (opt-in per view) */
.page-theme-faculty { --accent-role: #0f766e; }
.page-theme-faculty .table-modern { --row-hover: rgba(15, 118, 110, 0.08); }

/* Section header component */
.section-header { display: flex; align-items: center; justify-content: space-between; gap: 1rem; padding: 0.5rem 0 1rem; border-bottom: 2px solid var(--border-color); box-shadow: inset 0 -3px 0 var(--accent-role, #c62828); flex-wrap: wrap; }
.section-header .title,
.section-header h2,
.section-header h3,
.section-header h4 { margin: 0; font-weight: 700; color: var(--text-color); }
.section-header .actions > * { margin-left: 0.5rem; }
/* Allow forms within section headers to grow full-width when wrapped */
.section-header form { flex: 1 1 100%; }
@media (max-width: 576px) {
  .section-header .actions { width: 100%; justify-content: flex-start; }
}

